{
  "name": "aniside",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "clients/*",
    "servers/*",
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/node": "^18.7.11",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "turbo": "^1.4.3",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "lint-staged": {
    "*.{ts,tsx,md,mdx,js,jsx}": [
      "eslint --fix --ext .ts,.tsx,.js.,jsx"
    ]
  }
}